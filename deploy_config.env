# ===== CONFIGURACIÓN DE DESPLIEGUE DEUDOUT =====
# Archivo de configuración para el despliegue SFTP

# Configuración del VPS
VPS_IP=tu-ip-del-vps
VPS_USER=root
VPS_PORT=22

# Configuración de la aplicación
APP_NAME=deudout
APP_DIR=/home/deudout
DOMAIN=tu-dominio.com

# Configuración de email (configurar después de la instalación)
EMAIL_SERVER=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=tu-email@gmail.com
EMAIL_PASSWORD=tu-app-password

# Configuración de seguridad
SECRET_KEY=generar-automaticamente
FORCE_HTTP=1

# Archivos a desplegar
DEPLOY_FILES=(
    "app.py"
    "models.py"
    "requirements.txt"
    "init_db.py"
    "crear_admin.py"
    "poblar_entidades_financieras.py"
    "utils/"
    "static/"
    "templates/"
    "instance/"
    ".env.example"
    "README.txt"
    "gunicorn.conf.py"
    "nginx.conf"
    "install_ubuntu24_optimized.sh"
)

# Notas de instalación
NOTES="
1. Asegúrate de que el VPS esté limpio (Ubuntu 24.04)
2. Ejecuta el script de instalación como root
3. Cambia la contraseña del admin después de la instalación
4. Configura las variables de email en .env
5. Considera configurar SSL/HTTPS para producción
"


