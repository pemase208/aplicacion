# ===== CONFIGURACIÓN ROBUSTA DEUDOUT =====
# Copia este archivo a .env y ajusta los valores
# IMPORTANTE: No uses espacios alrededor del signo igual (=)

# ===== CONFIGURACIÓN DE FLASK =====
FLASK_ENV=production
SECRET_KEY=TU_CLAVE_SECRETA_AQUI_GENERADA_CON_PYTHON
FLASK_DEBUG=False
FLASK_APP=app.py

# ===== CONFIGURACIÓN DE BASE DE DATOS =====
# Opción 1: SQLite (por defecto, más simple)
DATABASE_TYPE=sqlite
DATABASE_URL=sqlite:////var/www/flaskapp/mibasedatos.db

# Opción 2: MySQL/MariaDB (más robusto para producción)
# DATABASE_TYPE=mysql
# DATABASE_URL=mysql://usuario:password@localhost/deudout_db

# Opción 3: PostgreSQL (más avanzado)
# DATABASE_TYPE=postgresql
# DATABASE_URL=postgresql://usuario:password@localhost/deudout_db

# ===== CONFIGURACIÓN DE SESIÓN =====
SESSION_COOKIE_SECURE=False
FORCE_HTTP=1
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
PERMANENT_SESSION_LIFETIME=604800

# ===== CONFIGURACIÓN DE EMAIL (OPCIONAL) =====
# Si no configuras email, la funcionalidad de envío estará deshabilitada
SMTP_ENABLED=False
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=tu_email@gmail.com
SMTP_PASSWORD=tu_password_de_aplicacion
SMTP_USE_TLS=True
SMTP_USE_SSL=False

# ===== CONFIGURACIÓN DE SEGURIDAD =====
MAX_LOGIN_ATTEMPTS=5
LOGIN_TIMEOUT_MINUTES=15
PASSWORD_MIN_LENGTH=8
ENABLE_RATE_LIMITING=True

# ===== CONFIGURACIÓN DE ARCHIVOS =====
MAX_FILE_SIZE=10485760
UPLOAD_FOLDER=/var/www/flaskapp/uploads
INSTANCE_FOLDER=/var/www/flaskapp/instance
STATIC_FOLDER=/var/www/flaskapp/static
TEMPLATES_FOLDER=/var/www/flaskapp/templates

# ===== CONFIGURACIÓN DE LOGS =====
LOG_LEVEL=INFO
LOG_FILE=/var/log/flaskapp/app.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# ===== CONFIGURACIÓN DE RENDIMIENTO =====
WORKERS=4
WORKER_CLASS=sync
TIMEOUT=30
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=50

# ===== CONFIGURACIÓN DE CACHE =====
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300
CACHE_KEY_PREFIX=deudout_

# ===== CONFIGURACIÓN DE MONITOREO =====
ENABLE_HEALTH_CHECK=True
HEALTH_CHECK_INTERVAL=300
ENABLE_METRICS=False

# ===== CONFIGURACIÓN DE DESARROLLO =====
# Solo para desarrollo local, NO usar en producción
# FLASK_DEBUG=True
# FLASK_ENV=development
# DATABASE_URL=sqlite:///./mibasedatos.db






